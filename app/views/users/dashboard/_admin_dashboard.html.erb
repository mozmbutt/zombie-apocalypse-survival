<div class="container emp-profile">
	<div class="row">
		<div class="col-md-4">
			<div class="profile-img">
				<%= show_image_if_present(current_user) %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="profile-head">
				<h5>
					<%= current_user.name %>
				</h5>
				<h6>
					role: <%= current_user.role %>
				</h6>
				<ul class="nav nav-tabs" id="myTab" role="tablist">
					<li class="nav-item">
							<a class="nav-link active" id="home-tab">About</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="col-md-2">
				<%= link_to 'Edit Profile', edit_user_registration_path, class:"profile-edit-btn" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="profile-work">
				<p>Actions</p>
				<%= link_to 'Manage Items', items_path %><br/>
				<%= link_to 'View Reports', users_dashboard_reports_path %>
			</div>
		</div>
		<div class="col-md-8">
			<div class="tab-content profile-tab" id="myTabContent">
				<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
						<%= render 'user_info' %>                      
				</div>
			</div>
		</div>
	</div>
</div>