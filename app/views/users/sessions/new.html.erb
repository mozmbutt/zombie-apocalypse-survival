 <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>

                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"mx-1 mx-md-4" ) do |f| %>
                    <div class="field">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                      <%= f.label :email, class:"form-label" %><br />
                    </div>

                    <div class="field">
                      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
                      <%= f.label :password, class:"form-label" %><br />
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, class:"form-label mb-4" %>
                      </div>
                    <% end %>

                    <div class="actions">
                      <%= f.submit "Log in", class:"btn btn-primary btn-lg" %>
                    </div>
                  <% end %>
                  <%= render "users/shared/links" %>

            </div>
            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>